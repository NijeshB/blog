generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  INACTIVE
}

enum PostStatus {
  PENDING
  PUBLISHED
  REVIEW
  DRAFT
  TRASH
}

model User{
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  status    Status   @default(ACTIVE)
  password String
  @@map("users")
  Blog Blog[]
}

model Blog{
  id Int @id @default(autoincrement())
  content String 
  userId Int  @unique
  createdAt DateTime @default(now())
  status PostStatus @default(REVIEW)
  user User @relation(fields: [userId], references: [id])
  

  @@map("blog")
}